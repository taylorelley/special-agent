{
  "id": "memory-cognee",
  "name": "Memory (Cognee)",
  "kind": "memory",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "baseUrl": {
        "type": "string",
        "description": "Cognee API base URL (default: http://localhost:8000)"
      },
      "apiKey": {
        "type": "string",
        "description": "Cognee API key (or use ${COGNEE_API_KEY})"
      },
      "datasetName": {
        "type": "string",
        "description": "Cognee dataset name to store memories in"
      },
      "searchType": {
        "type": "string",
        "enum": ["GRAPH_COMPLETION", "CHUNKS", "SUMMARIES"],
        "description": "Cognee search mode"
      },
      "maxResults": {
        "type": "number",
        "description": "Max recall results to inject (default: 6)"
      },
      "minScore": {
        "type": "number",
        "description": "Minimum score to include in recall (default: 0)"
      },
      "maxTokens": {
        "type": "number",
        "description": "Token cap for recall (default: 512)"
      },
      "autoRecall": {
        "type": "boolean",
        "description": "Inject memories before each agent run (default: true)"
      },
      "autoIndex": {
        "type": "boolean",
        "description": "Auto-sync memory files to Cognee on plugin startup (default: true)"
      },
      "autoCognify": {
        "type": "boolean",
        "description": "Run cognify after new memories are added (default: true)"
      },
      "requestTimeoutMs": {
        "type": "number",
        "description": "HTTP timeout in milliseconds for Cognee requests (default: 60000)"
      },
      "enableTools": {
        "type": "boolean",
        "description": "Register agent-facing memory tools: memory_store, memory_recall, memory_forget (default: true)"
      },
      "decayRate": {
        "type": "number",
        "description": "Exponential decay rate lambda â€” higher values mean faster decay (default: 0.03)"
      },
      "pruneThreshold": {
        "type": "number",
        "description": "Decay score below which memories are pruned (default: 0.05)"
      },
      "autoPrune": {
        "type": "boolean",
        "description": "Automatically prune dormant memories after each agent turn (default: false)"
      },
      "typeWeights": {
        "type": "object",
        "description": "Override type weights for recall scoring (episodic=0.8, semantic=1.2, procedural=1.0)",
        "properties": {
          "episodic": { "type": "number" },
          "semantic": { "type": "number" },
          "procedural": { "type": "number" },
          "vault": { "type": "number" }
        },
        "additionalProperties": false
      }
    }
  },
  "uiHints": {
    "baseUrl": {
      "label": "Base URL",
      "placeholder": "http://localhost:8000"
    },
    "apiKey": {
      "label": "API Key",
      "sensitive": true,
      "placeholder": "${COGNEE_API_KEY}"
    },
    "datasetName": {
      "label": "Dataset Name",
      "placeholder": "special-agent"
    },
    "searchType": {
      "label": "Search Type",
      "placeholder": "GRAPH_COMPLETION"
    },
    "maxResults": {
      "label": "Max Results",
      "placeholder": "6"
    },
    "minScore": {
      "label": "Min Score",
      "placeholder": "0"
    },
    "maxTokens": {
      "label": "Max Tokens",
      "placeholder": "512"
    },
    "autoRecall": {
      "label": "Auto-Recall"
    },
    "autoIndex": {
      "label": "Auto-Index on Startup"
    },
    "autoCognify": {
      "label": "Auto-Cognify"
    },
    "requestTimeoutMs": {
      "label": "Request Timeout (ms)",
      "placeholder": "60000"
    },
    "enableTools": {
      "label": "Enable Memory Tools"
    },
    "decayRate": {
      "label": "Decay Rate",
      "placeholder": "0.03"
    },
    "pruneThreshold": {
      "label": "Prune Threshold",
      "placeholder": "0.05"
    },
    "autoPrune": {
      "label": "Auto-Prune"
    },
    "typeWeights": {
      "label": "Type Weights"
    }
  }
}
