[Unit]
Description=Special Agent Auth Expiry Monitor
After=network.target

[Service]
Type=oneshot
ExecStart=/home/admin/special-agent/scripts/auth-monitor.sh
# Configure notification channels via environment
Environment=WARN_HOURS=2
# Environment=NOTIFY_PHONE=+1234567890
# Environment=NOTIFY_NTFY=special-agent-alerts

[Install]
WantedBy=default.target
